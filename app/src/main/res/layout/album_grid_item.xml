<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <ImageView
        android:id="@+id/album_grid_album_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/album_grid_album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/album_grid_album_image"
        android:text="TextoPlaceholderAlbumName"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/album_grid_album_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextoPLaceholderAlbumArtist"
        android:layout_below="@+id/album_grid_album_name"
        android:layout_alignEnd="@+id/album_grid_album_name"
        android:textAlignment="center"/>
</RelativeLayout>