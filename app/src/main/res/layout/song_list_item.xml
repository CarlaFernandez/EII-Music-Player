<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/song_list_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/song_list_track_number"
        android:text="PlaceholderTitle"
        android:textAlignment="textStart"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/song_list_album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placeholder Album"
        android:layout_below="@+id/song_list_song_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/song_list_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placeholder Artist"
        android:layout_below="@+id/song_list_album_title"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/song_list_track_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="01" />

</RelativeLayout>